/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
----------------------------------------------------------------------------------------
*/

process {

    publishDir = [
        path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
        mode: params.publish_dir_mode,
        saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
    ]

    withName: FASTQC {
        ext.args = '--quiet'
    }

    withName: 'MULTIQC' {
        ext.args   = { params.multiqc_title ? "--title \"$params.multiqc_title\"" : '' }
        publishDir = [
            path: { "${params.outdir}/multiqc" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'STAR_GENOMEGENERATE' {
        def sjdb_overhang = params.read_length? params.read_length: 50 - 1
        ext.args = [
            '--genomeSAindexNbases 14',
            '--genomeChrBinNbits 18',
            "--sjdbOverhang ${sjdb_overhang}"
        ].join(' ')
    }

    withName: 'STAR_ALIGN' {
        def sjdb_overhang = params.read_length? params.read_length: 50 - 1
        ext.args = [
            '--limitBAMsortRAM 140880991368',
            '--outSAMattributes NH NM MD',
            '--outSAMunmapped Within',
            '--outSAMmapqUnique 60',
            '--outSAMtlen 2',
            '--outSJfilterCountUniqueMin -1 2 2 2',
            '--outSJfilterCountTotalMin -1 2 2 2',
            '--outFilterType BySJout',
            '--outFilterIntronMotifs RemoveNoncanonical',
            '--peOverlapNbasesMin 10',
            '--peOverlapMMp 0.1',
            '--chimSegmentMin 12',
            '--chimScoreDropMax 30',
            '--chimScoreSeparation 5',
            '--chimJunctionOverhangMin 12',
            '--chimOutType WithinBAM',
            '--chimSegmentReadGapMax 5',
            '--quantMode TranscriptomeSAM',
            '--quantTranscriptomeBan Singleend',
            '--twopassMode Basic',
            "--sjdbOverhang ${sjdb_overhang}"
        ].join(' ')
    }
    
    withName: 'SALMON_QUANT' {
        ext.args = '--validateMappings --seqBias --gcBias --posBias --numBootstraps 50'
    }
    
    withName: 'GATK4_HAPLOTYPECALLER' {
        ext.args = [
            '--dont-use-soft-clipped-bases',
            '--output-mode EMIT_ALL_ACTIVE_SITES',
            '--interval-padding 20',
            '--min-base-quality-score 1',
            '--pcr-indel-model CONSERVATIVE',
            '-stand-call-conf 0',
            '--max-reads-per-alignment-start 0'
        ].join(' ')
    }

}
